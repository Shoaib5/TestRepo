<h1>Add new book</h1>

<%= form_with model: @Book, local: true  do |form| %>
  <%=form.label:title %><br>

  <%=form.text_field:title %><br>


  <%=form.label:price %><br>
  <%=form.text_field :price %><br>

  <%=form.label:description %><br>

  <%= form.text_area :description%><br><br>
  <%= form.submit %>

<% end -%>
<%= link_to 'Back', {:action => 'list'} %>
